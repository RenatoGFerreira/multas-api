generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InfractionSeverity {
  LEVE
  MEDIA
  GRAVE
  GRAVISSIMA
}

model InfractionType {
  id          String   @id @default(uuid())
  code        String   @unique
  description String
  severity    InfractionSeverity
  points      Int
  fineAmount  Decimal @db.Decimal(10,2)
  autoSuspend Boolean  @default(false)

  fines       Fine[]

  @@map("infraction_types")
}

model Fine {
  id               String   @id @default(uuid())
  infractionTypeId String
  automobileId     String

  occurredAt       DateTime
  paid             Boolean  @default(false)

  infractionType   InfractionType @relation(fields: [infractionTypeId], references: [id])
  automobile       Automobile   @relation(fields: [automobileId], references: [id])

  createdAt        DateTime @default(now())

  @@map("fines")
}

model Automobile {
  id               String   @id @default(uuid())
  plate            String   @unique
  brand            String
  model            String 
  year             Int
  color            String?

  isActive         Boolean  @default(true)
  fines            Fine[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("automobiles")
}